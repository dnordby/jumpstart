{
  "name": "jumpstart",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "npm-run-all --parallel lint:*",
    "lint:ts": "eslint . --ext .ts,.tsx",
    "lint:css": "stylelint \"**/*.{css,scss}\"",
    "lint:html": "htmlhint \"**/*.html\"",
    "lint:liquid": "theme-check",
    "dev": "concurrently \"vite build --watch\" \"shopify theme dev --path theme --live-reload hot-reload\"",
    "build": "npm run lint && vite build && npm run postbuild",
    "preview": "vite preview",
    "postbuild": "postcss theme/assets/*.css --replace",
    "deploy": "npm run build && shopify theme push --theme-id $THEME_ID"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/node": "^24.0.1",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "concurrently": "^9.1.2",
    "cssnano": "^7.0.7",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "htmlhint": "^1.5.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.5",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.5.3",
    "sass": "^1.89.2",
    "stylelint": "^16.20.0",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-config-standard-scss": "^15.0.1",
    "stylelint-prettier": "^5.0.3",
    "vite": "^6.3.5"
  }
}
